{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-var": "error", // Prohibir el uso de var
    "max-len": ["error", { "code": 80 }], // Longitud máxima de línea
    "no-console": "warn", // Advertir sobre el uso de console
    "quotes": ["error", "single"], // Uso de comillas simples
    "semi": ["error", "always"], // Requerir punto y coma
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error"
  },
  "plugins": ["jest"]
}
